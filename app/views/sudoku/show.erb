    <div class="row">
        <div class="menu nav flex-column">
            <button class="nav-link btn btn-lg btn-primary" id="renew">Restart Game</button>
            <button class="nav-link btn btn-lg btn-primary" id="delete">Delete Game</button>
            <button class="nav-link btn btn-lg btn-primary" id="clear">Clear Current Game</button>
        </div>
        <div class="wrapper shadow">
            <%= erb :'sudoku/grid', :locals => {:sudoku => @sudoku} %>


            <div id="games"></div>

            <div id="message"></div>
        </div>
    </div>
</div>



